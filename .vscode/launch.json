  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'exercism_2022'",
      "cargo": {
        "args": [
          "build",
          "--bin=exercism_2022",
          "--package=exercism_2022"
        ],
        "filter": {
          "name": "exercism_2022",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'exercism_2022'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=exercism_2022",
          "--package=exercism_2022",
        ],
        "filter": {
          "name": "exercism_2022",
          "kind": "bin"
        }
      },
      "args": [
        "--include-ignored",
        "--nocapture",
        "parallel_letter_frequency::test_many_times_same_text"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}